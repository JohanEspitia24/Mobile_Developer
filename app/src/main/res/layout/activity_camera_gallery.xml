<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".CameraGalleryActivity">

    <!-- Switch para cambiar entre foto y video -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Video"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Botón para capturar desde cámara -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_capture"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Capturar"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:backgroundTint="@drawable/btn_gradient_red"
        app:icon="@drawable/ic_camera"
        app:iconPadding="12dp"
        app:cornerRadius="32dp"
        app:iconTint="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/switch_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Botón para escoger desde galería -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Escoger"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:backgroundTint="@drawable/btn_gradient_blue"
        app:icon="@drawable/ic_gallery"
        app:iconPadding="12dp"
        app:cornerRadius="32dp"
        app:iconTint="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- ImageView para mostrar imágenes -->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:background="@drawable/image_placeholder"/>

    <!-- VideoView para mostrar videos -->
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
