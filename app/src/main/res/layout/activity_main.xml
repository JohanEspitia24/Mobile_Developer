<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Primer botón: Abrir cámara o galería -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_camera_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Cámara/Galería"
        android:drawableLeft="@drawable/ic_camera"
        app:iconPadding="8dp"
        app:icon="@drawable/ic_camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Segundo botón: Abrir mapas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Mapas"
        android:drawableLeft="@drawable/ic_map"
        app:iconPadding="8dp"
        app:icon="@drawable/ic_map"
        app:layout_constraintTop_toBottomOf="@id/btn_camera_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
